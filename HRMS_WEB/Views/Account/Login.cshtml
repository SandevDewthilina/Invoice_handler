            @* *@
            @* <p class="mb-1"> *@
            @*     <a href="#">I forgot my password</a> *@
            @* </p> *@
        </div>
        <!-- /.login-card-body -->
    </div>
    @* <div class="login-logo"> *@
    @*     <a href="#"><b>Powered by Evision Microsystems (Pvt)Ltd</b></a> *@
    @* </div> *@
</div>
