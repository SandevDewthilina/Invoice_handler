@{
    ViewData["Title"] = "Comparison Logs";
}

@model List<HRMS_WEB.Entities.ComparisonLog>

@section Styles{
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="~/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <style>
        table.dataTable td, table.dataTable th {
            font-size: 14px;
        }
    </style>
}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">@ViewData["Title"]</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">
                            <a href="#">Home</a>
                        </li>
                        <li class="breadcrumb-item active">Comparison Logs</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
            @* <div class="row"> *@
            @*     <div class="col-sm-12 text-right"> *@
            @*         <a asp-action="Upload" asp-controller="Invoice" class="btn btn-primary"><i class="fa fa-upload"></i>&nbsp; &nbsp; Upload File</a> *@
            @*     </div> *@
            @* </div> *@
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid" id="main">
            <div class="card card-primary card-outline">
                <div class="card-header">
                    <h3 class="card-title text-primary">All Logs</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="myuploadstable" class="table table-striped table-sm">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Chassis Number</th>
                            <th>First Type</th>
                            <th>Second Type</th>
                            <th>Status</th>
                            <th>Error</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                            @foreach (var log in Model)
                            {
                                <tr>
                                    <td>@log.ID</td>
                                    <td>@log.FirstExternalData.ChassisNumber</td>
                                    <td>@log.FirstExternalData.Type</td>
                                    <td>@log.SecondExternalData.Type</td>
                                    <td>
                                        @if (log.Status)
                                        {
                                            <div class="badge badge-success">Success</div>
                                        }
                                        else
                                        {
                                            <div class="badge badge-danger">Failed</div>
                                        }
                                    </td>
                                    <td>
                                        <p class="text-sm">@log.ErrorMessage</p>
                                    </td>
                                    <td class="text-center">
                                        <form asp-action="Index" asp-controller="Validation" asp-route-FirstSourceBatchId="@log.FirstExternalDataID" asp-route-SecondSourceBatchId="@log.SecondExternalDataID">
                                            <button type="submit" class="btn btn-primary btn-sm text-sm mr-3">View</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
        </div><!--/. container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<!-- PAGE SCRIPTS -->

@section Scripts
{
    <!-- DataTables -->
    <script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script>
     $(document).ready(function () {
                    $("#myuploadstable").DataTable({
                        "responsive": true,
                        "autoWidth": false,
                        "pageLength": 50,
                        "order": [ 0, 'desc' ]
                    });
                });
    </script>
}