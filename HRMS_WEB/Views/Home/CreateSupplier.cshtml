@{
    ViewData["Title"] = "Create Supplier";
}
@model HRMS_WEB.Viewmodels.SupplierViewModel

@section Styles{
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <!-- Select2 -->
    <link rel="stylesheet" href="~/plugins/select2/css/select2.min.css">
    <link rel="stylesheet" href="~/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">
}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">@ViewData["Title"]</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">
                            <a href="#">Home</a>
                        </li>
                        <li class="breadcrumb-item active">Create Supplier</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid" id="main">
            <div class="card card-primary card-outline">
                <div class="card-header">
                    <h3 class="card-title">Create Form</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form role="form" method="post" asp-action="CreateSupplier" asp-controller="Home">
                    <div class="card-body">
                        @* <div class="form-group"> *@
                        @*     <label asp-for="Id">ID</label> *@
                        @*     <input disabled class="form-control" id="exampleInputEmail1" asp-for="Id"> *@
                        @* </div> *@
                        <input hidden asp-for="Id">
                        <div class="form-group">
                            <label asp-for="Name">Name</label>
                            <input type="text" class="form-control" id="exampleInputPassword1" asp-for="Name" placeholder="Supplier Name">
                        </div>
                        <div class="form-group">
                            <label asp-for="Name">Code</label>
                            <input type="text" class="form-control" id="supplierCode" asp-for="Code" placeholder="Supplier Code">
                        </div>
                        <div class="form-group" style="visibility: hidden">
                            <label>Templates</label>
                            <select class="select2"
                                    multiple="multiple"
                                    data-placeholder="Select Templates"
                                    asp-for="NewlySelectedIdList"
                                    style="width: 100%;"
                                    asp-items="@(new MultiSelectList(Model.Templates, "ID", "Name", Model.AlreadySelectedIdList))">
                            </select>
                        </div>
                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div><!--/. container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<!-- PAGE SCRIPTS -->

@section Scripts
{
    <!-- Select2 -->
    <script src="~/plugins/select2/js/select2.full.min.js"></script>
    <script defer>
     $('.select2').select2()
    </script>
}