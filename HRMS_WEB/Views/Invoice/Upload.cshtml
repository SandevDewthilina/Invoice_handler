@using Microsoft.AspNetCore.Mvc.TagHelpers
@model HRMS_WEB.ViewModels.ImageUploadViewModel
@{
    ViewData["Title"] = "Upload Images";
}

@section Styles
{
    <style>
        .dropdown-menu {
            z-index: 10000;
        }
    </style>
    <link href="https://releases.transloadit.com/uppy/v3.4.0/uppy.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.css"/>
}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h5 class="m-0 text-dark">@ViewData["Title"]</h5>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">
                            <a href="#">Home</a>
                        </li>
                        <li class="breadcrumb-item active">Upoad file</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid" id="main">
            <div class="card card-primary card-outline">
                <div class="card-header">
                    <div class="card-title">Upload your file</div>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Upload" asp-controller="Invoice" id="upload-form" enctype="multipart/form-data">
                        <div class="form-group d-flex flex-column" id="TagDropdown">
                            <label>Select Document Template</label>
                            <select id="templates" class="selectpicker"
                                    data-live-search="true"
                                    data-width="100%"
                                    asp-for="TemplateID"
                                    data-actions-box="true"
                                    data-placeholder="Choose" style="width: 100%;">
                                @foreach (var template in Model.Templates)
                                {
                                    <option key="@template.ID" value="@template.ID" id="option_@template.ID">@template.Name</option>
                                }
                            </select>
                        </div>
                        <div class="container py-5" id="uppy">
                            <div class="row">
                                <input type="file" name="files[]" multiple hidden>
                                <div class="col-sm-12 text-center">
                                    <div class="form-group" id="uppyDashboard"></div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div><!--/. container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<!-- PAGE SCRIPTS -->


@section Scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/js/bootstrap-select.min.js"></script>
    <script src="https://releases.transloadit.com/uppy/v3.4.0/uppy.min.js"></script>
    <script defer src="~/js/image_upload.js"></script>
}